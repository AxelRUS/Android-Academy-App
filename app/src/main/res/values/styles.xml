<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="lecture_button">
        <item name="android:layout_width">@dimen/lecture_button_size</item>
        <item name="android:layout_height">@dimen/lecture_button_size</item>
    </style>

    <style name="mentor_avatar">
        <item name="android:layout_width">@dimen/mentor_avatar_size</item>
        <item name="android:layout_height">@dimen/mentor_avatar_size</item>
    </style>

    <style name="text_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_body">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="mentor_list_title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="list_item">
        <item name="android:background">@color/black</item>
        <item name="android:layout_margin">@dimen/list_item_horizantal_margin</item>
     </style>

    <style name="news_content_image">
        <item name="android:layout_height">@dimen/news_content_image_height</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="list">
        <item name="android:paddingLeft">@dimen/list_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/list_horizontal_padding</item>
    </style>
</resources>