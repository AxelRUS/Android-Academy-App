<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.quiz.QuizFragment">


    <TextView
        android:id="@+id/textView"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="24dp"
        android:padding="14sp"
        android:text="@string/quiz"
        android:textSize="48sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_question1"
        android:layout_width="286dp"
        android:layout_height="48dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:text="Где зародился язык котлин?"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tv_answer1"
        android:layout_width="136dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="Москва"
        app:layout_constraintStart_toStartOf="@+id/tv_question1"
        app:layout_constraintTop_toBottomOf="@+id/tv_question1" />

    <TextView
        android:id="@+id/tv_answer2"
        android:layout_width="129dp"
        android:layout_height="46dp"
        android:layout_marginStart="50dp"
        android:text="Питер"
        app:layout_constraintBottom_toBottomOf="@+id/tv_answer1"
        app:layout_constraintEnd_toEndOf="@+id/tv_answer4"
        app:layout_constraintStart_toEndOf="@+id/tv_answer1"
        app:layout_constraintTop_toTopOf="@+id/tv_answer1" />

    <TextView
        android:id="@+id/tv_answer3"
        android:layout_width="137dp"
        android:layout_height="43dp"
        android:layout_marginTop="28dp"
        android:text="@string/kuba"
        app:layout_constraintBottom_toBottomOf="@+id/tv_answer4"
        app:layout_constraintEnd_toEndOf="@+id/tv_answer1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tv_answer1"
        app:layout_constraintTop_toBottomOf="@+id/tv_answer1" />

    <TextView
        android:id="@+id/tv_answer4"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="53dp"
        android:text="Ямайка"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_answer3"
        app:layout_constraintTop_toBottomOf="@+id/tv_answer2" />


</androidx.constraintlayout.widget.ConstraintLayout>